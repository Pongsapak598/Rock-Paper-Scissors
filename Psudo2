let output = document.querySelector('.output');
output.innerHTML = '';

let i = 10;

while (i >= 0) {
  const para = document.createElement('p')
	if (i === 10) {
	  para.textContent = 'Starting countdown, 10';
	} else (if i > 0) {
	  para.textContent = `i`;
	} else if (i === 0) {
	  para.textContent = 'Blast off!'
	} else para.textContent = 'error'

  output.appendChild(para);
  i--;
}


